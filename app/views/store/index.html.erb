<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Welcome to my store!</h1>

<% @products.each do|product| %>
	<div class="entry">
		<!--<%= image_tag(product.image_url) %> This is the line that was here before we added the next line. we'd have to add some ajax to our code to prevent the page from refreshing because of the next line-->
		<%= link_to image_tag(product.image_url), line_items_path(product_id: product), html_options = {:method => :post} %>
		<h3><%= product.title %></h3>
		<%= sanitize(product.description) %>
		<div class="price_line">
			<span class="price"><%= number_to_currency(product.price) %></span>
			<%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
		</div>
	</div>
<%end %>

